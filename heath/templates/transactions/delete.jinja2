{% extends "heath:templates/base.jinja2" %}

{% block content %}
  <h1>Are you sure you want to delete this transaction?</h1>

  <label for="description">Description</label>
  <span type="text" name="description">{{ transaction.description }}</span>
  <br>
  <label for="amount">Amount</label>
  <span type="number" name="amount">{{ transaction.amount | round(2) }}</span>
  <br>
  <form method="post" action="">
    <input type="submit" name="delete" value="Delete">
  </form>
    <a href="{{ request.route_url('transaction_detail', transaction_id=transaction.id) }}">Cancel</a>
{% endblock content %}