{% extends "heath:templates/base.jinja2" %}

{% block content %}
    <table>
      <thead>
        <tr>
          <th>Description</th>
          <th>Amount</th>
        </tr>
      </thead>
      <tbody>
        {% for transaction in transactions %}
          <tr>
            <td>{{ transaction.description }}</td>
            <td>{{ transaction.amount | round(2) }}</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
    <p>
      <a href="/create">Add New Transaction</a>
    </p>
{% endblock content %}