{% extends "heath:templates/base.jinja2" %}

{% block content %}
  <p>
    Budget: {{ budget | round(2) }}
  </p>
  <table>
    <thead>
      <tr>
        <th>Description</th>
        <th>Amount</th>
      </tr>
    </thead>
    <tbody>
      {% for transaction in transactions %}
        <tr>
          <td><a href="{{ request.route_url('transaction_detail', transaction_id=transaction.id) }}">{{ transaction.description }}</a></td>
          <td>{{ transaction.amount | round(2) }}</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
  <p>
    <a href="/create">Add New Transaction</a>
  </p>
{% endblock content %}