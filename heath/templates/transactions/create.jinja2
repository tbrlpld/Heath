{% extends "heath:templates/base.jinja2" %}

{% block content %}
  <h1>Create Transaction</h1>
  {% if errors %}
  <ul id="errors">
    {% for error in errors %}
      <li>{{ error }}</li>
    {% endfor %}
  </ul>
  {% endif %}
  <form action="" method="post">
    <label for="description">Description</label>
    <input id="description" type="text" name="description" required value="{{ description|default('') }}">
    <br>
    <label for="amount">Amount</label>
    <input id="amount" type="number" name="amount" step="0.01" required value="{{ amount or '' }}">
    <br>
    <input type="submit" name="submit" value="Create">
  </form>
{% endblock content %}