{% extends "heath:templates/base.jinja2" %}

{% block content %}
  <h1>Transaction</h1>

  <label for="description">Description</label>
  <span id="description" type="text" name="description">{{ transaction.description }}</span>
  <br>
  <label for="amount">Amount</label>
  <span id="amount" type="number" name="amount">{{ "%.2f" | format(transaction.amount) }}</span>
  <br>
  <a href="{{ request.route_url('transaction.update', transaction_id=transaction.id) }}">Update</a>
  <a href="{{ request.route_url('transaction.delete', transaction_id=transaction.id) }}">Delete</a>
{% endblock content %}