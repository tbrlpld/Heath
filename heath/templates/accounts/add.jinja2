{% extends "heath:templates/base.jinja2" %}

{% block content %}
  <h1>Add Account</h1>
  {% if errors %}
  <ul id="errors">
    {% for error in errors %}
      <li>{{ error }}</li>
    {% endfor %}
  </ul>
  {% endif %}
  <form action="" method="post">
    <label for="name">Name</label>
    <input id="name" type="text" name="name" required value="{{ name|default('') }}">
    <br>
    <input type="submit" name="submit" value="Create">
  </form>
  <p>
    <a href="{{ request.route_url('home') }}">Cancel</a>
  </p>
{% endblock content %}